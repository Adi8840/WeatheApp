<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/5866eae3c4.js" crossorigin="anonymous"></script>
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    {{>navbar}}
    <!-- main header -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityname" placeholder="Enter city name" autocomplete="off">
                        <input type="Submit" value="search" id="submitbtn">
                    </form>
                </div>

                <div class="tempInf">
                    <div class="top_layer">
                        <p id="day">Thrusday</p>
                        <p id="date">19 July</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get Output</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_val">0</span> <sup>o</sup>C </p>
                            <p id="temp_status"> <i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>footer}}
    <script src="js/main.js"></script>
    <script>
        const day = document.getElementById("day");
        const curr_date = document.getElementById("date");

        const getCurrentTime = () => {
            let months = ["Jan", "Feb", "March", "April", "May", "June", "July", "Aug", "Sep", "Oct", "Nov", "Dec"];
            let now = new Date();
            let mon = now.getMonth();
            let date = now.getDate();

            console.log(months[mon], day);
            return `${months[mon]} ${date}`;
        }
        const getCurrentday = () => {
            var weekday = ["Sunday", "Monday", "Tuesday", "wednesday", "Thrusday", "Friday", "Sunday"];
            let currentTime = new Date();
            var daynumber = currentTime.getDay();
            //console.log(weekday[daynumber]);
            return weekday[daynumber];
        }
        day.innerText = getCurrentday();
        curr_date.innerHTML = getCurrentTime();
    </script>
</body>

</html>